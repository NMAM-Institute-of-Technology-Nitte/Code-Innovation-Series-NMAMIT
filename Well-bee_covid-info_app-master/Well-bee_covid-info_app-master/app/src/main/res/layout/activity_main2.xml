<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total cases"
                android:textSize="20sp"
                android:fontFamily="@font/bangers"
                android:textStyle="normal">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"
                android:id="@+id/totalCaseInd"
                android:textAlignment="textEnd"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalCaseInd"
                android:text="Total confirm cases Indian"
                android:textSize="20sp"
                android:fontFamily="@font/bangers"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/totalCaseInd"
                android:layout_alignParentRight="true"
                android:id="@+id/totalConfCaseInd"
                android:textAlignment="textEnd"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalConfCaseInd"
                android:text="Total confirm cases Foreign"
                android:textSize="20sp"
                android:fontFamily="@font/bangers"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/totalConfCaseInd"
                android:layout_alignParentRight="true"
                android:id="@+id/totalConfCaseFor"
                android:textAlignment="textEnd"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalConfCaseFor"
                android:fontFamily="@font/bangers"
                android:text="Total Recovered"
                android:textColor="@color/greenColor"
                android:textSize="20sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/totalConfCaseFor"
                android:layout_alignParentRight="true"
                android:textColor="@color/greenColor"
                android:id="@+id/totalCaseRec"
                android:textAlignment="textEnd"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalCaseRec"
                android:fontFamily="@font/bangers"
                android:text="Total Death"
                android:paddingLeft="5dp"
                android:textColor="#F81909"
                android:textSize="20sp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/totalCaseRec"
                android:layout_alignParentRight="true"
                android:textColor="#F81909"
                android:id="@+id/totalDeathInd"
                android:textAlignment="textEnd"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>